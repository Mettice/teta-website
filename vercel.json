{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "routes": [
      { 
        "src": "/assets/(.*)", 
        "headers": { 
          "cache-control": "public, max-age=31536000, immutable",
          "content-type": "application/javascript; charset=utf-8"
        },
        "dest": "/assets/$1" 
      },
      { 
        "src": "/images/(.*)", 
        "headers": { "cache-control": "public, max-age=31536000, immutable" },
        "dest": "/images/$1" 
      },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }